- let url ="./theme/assets";
block site
    html
        head
            include products.pug
            block head
                meta(http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate") 
                meta( http-equiv="Pragma" content="no-cache") 
                meta( http-equiv="Expires" content="0")
                meta(charset='utf-8')
                meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
                meta(name='description' content='')
                meta(name='author' content='')

                title=title
            block style
                link(media="all" rel="stylesheet" href=`${url}/css/bootstrap.css`)
                link(media="all" rel="stylesheet" href=`${url}/css/fancybox.css`)
                link(media="all" rel="stylesheet" href=`${url}/css/icofont.css`)
                link(media="all" rel="stylesheet" href=`${url}/css/main.css`)
        body(class=bodyClass)
            block body
                header
                    block header
                        include header.pug 
                main
                    block content
                footer
                    block footer
                        include footer.pug 
            block script 
                script(type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.min.js")
                script(type="text/javascript" src=`${url}/js/bootstrap.js`)
                script(type="text/javascript" src=`${url}/js/plugins.js`)
                script(type="text/javascript" src=`${url}/js/config.js`)